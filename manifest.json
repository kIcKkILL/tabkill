{
	"manifest_version": 2,

	"name": "TabKill",
	"description": "Kill tabs that match customized rules",
	"version": "1.0",

	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},

	"options_page": "options.html",

	"browser_action": {
		"default_icon": "icon.png"
	},

	"permissions": [
		"tabs",
		"storage"
		]
}
