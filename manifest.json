{
    "manifest_version": 2,

    "name": "TabKill",
    "description": "Kill tabs that match customized rules",
    "version": "1.0",

    "background": {
        "scripts": ["background.js"]
    },

    "options_ui": {
        "page": "options.html"
    },
    
    "browser_action": {
        "default_icon": "icon.png"
    },

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+1"
            },
            "description" : "Fire tab-kill"
        }
    },

    "permissions": [
        "tabs",
        "storage"
    ]
}
